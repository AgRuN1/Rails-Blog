<% unless comment.archived? %>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= comment.commenter %></h5>
      <p class="card-text"><%= comment.body %></p>
      <%= link_to "Delete", [comment.article, comment], method: :delete, class: 'btn btn-danger' %>
    </div>
  </div>
<% end %>